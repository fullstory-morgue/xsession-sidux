#!/bin/sh
case "$1" in
	purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
		# This must be in /etc/inittab because xsession doesn't return
		update-rc.d -f xsession remove 2>/dev/null

		sed -i	-e /\#[[:space:]]Run[[:space:]]X[[:space:]]Window[[:space:]]session[[:space:]]from[[:space:]]CDROM[[:space:]]in[[:space:]]runlevel[[:space:]]5/d \
			-e /w5\:5\:wait\:\\/bin\\/sleep[[:space:]]2/d \
			-e /x5\:5\:wait\:\\/etc\\/init\\.d\\/xsession[[:space:]]start/d \
				/etc/inittab
	        ;;
	*)
		echo "postrm called with unknown argument \`$1'" >&2
		exit 0
		;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

